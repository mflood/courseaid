<h1>Listing courses</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Is archived</th>
      <th>School</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.order(:name).each do |course| %>
      <tr>
        <td><%= link_to course.name, course %></td>
        <td><a href="<%= course.url %>" target="_ext<%= course.id %>">go to url</a></td>
        <td><%= course.start_date %></td>
        <td><%= course.end_date %></td>
        <td><%= course.is_archived %></td>
        <td><%= link_to course.school.name, course.school %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

